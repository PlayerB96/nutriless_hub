// schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  password  String
  createdAt DateTime   @default(now())
  UserFood  UserFood[]

  // Relaciones con NextAuth
  accounts Account[]
  sessions Session[]
  recipes  Recipe[] // Relación uno-a-muchos (1 usuario → muchas recetas)
}

model Account {
  id                Int     @id @default(autoincrement())
  userId            Int
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           Int      @id @default(autoincrement())
  sessionToken String   @unique
  userId       Int
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Food {
  id                Int                @id @default(autoincrement())
  name              String
  category          String
  createdAt         DateTime           @default(now())
  userId            Int
  imageUrl          String? // <- Asegúrate de agregar esta línea
  nutritionDetails  NutritionDetail[]
  householdMeasures HouseholdMeasure[]
  UserFood          UserFood[]
}

model UserFood {
  id     Int      @id @default(autoincrement())
  userId Int
  foodId Int
  date   DateTime @default(now())
  user   User     @relation(fields: [userId], references: [id])
  food   Food     @relation(fields: [foodId], references: [id])
}

// Detalle Nutricional
model NutritionDetail {
  id       Int    @id @default(autoincrement())
  foodId   Int
  food     Food   @relation(fields: [foodId], references: [id])
  nutrient String // Ejemplo: "Vitamina C", "Zinc", "Calorías"
  value    Float // cantidad, ej: 10.5
  unit     String // ej: "mg", "kcal", "µg"

  @@unique([foodId, nutrient], name: "foodId_nutrient")
}

// Medidas caseras
model HouseholdMeasure {
  id          Int    @id @default(autoincrement())
  foodId      Int
  food        Food   @relation(fields: [foodId], references: [id])
  description String // Ej: "1 taza", "1 cucharada", "1 rebanada"
  quantity    Float // Cantidad en esa medida (ej: 1 o 2.5)
  weightGrams Float // Peso en gramos equivalente a esa cantidad
}

model CategoryFood {
  id   Int    @id @default(autoincrement())
  name String @unique
}

model OptionalNutrient {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TraditionalFood {
  id        Int      @id @default(autoincrement())
  name      String // Ej: "Papa", "Camote"
  category  String // Ej: "Tubérculo"
  origin    String? // Ej: "Sierra"
  imageUrl  String? // Opcional
  createdAt DateTime @default(now())

  // Relación con nutrientes
  nutrients TraditionalNutrient[]
}

model TraditionalNutrient {
  id       Int             @id @default(autoincrement())
  food     TraditionalFood @relation(fields: [foodId], references: [id])
  foodId   Int
  nutrient String // Ej: "Vitamina C", "Zinc"
  value    Float // Ej: 12.5
  unit     String // Ej: "mg", "g", "kcal"
}

model Recipe {
  id         Int           @id @default(autoincrement())
  name       String
  tags       String[] // etiquetas : almuerzo, cena , lunch
  portions   Int // cantidad de porciones por persona
  prepTime   Int // tiempo de preparación en minutos
  cookTime   Int? // opcional: puede ser null
  difficulty String
  isPublic   Boolean       @default(false)
  createdAt  DateTime      @default(now())
  detail     RecipeDetail? // Relación uno-a-uno
  User       User?         @relation(fields: [userId], references: [id])
  userId     Int?
}

model RecipeDetail {
  id           Int      @id @default(autoincrement())
  recipeId     Int      @unique
  ingredients  String[] // Lista de ingredientes
  instructions String[] // Lista de instrucciones paso a paso
  recipe       Recipe   @relation(fields: [recipeId], references: [id], onDelete: Cascade)
}
